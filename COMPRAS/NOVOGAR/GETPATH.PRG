FUNCTION GETPATH
DO CASE
CASE GETENV("EQUIPO")='ARROYO' .OR. ;
GETENV("EQUIPO")='NOVOLAP' .OR. ;
GETENV("EQUIPO")='GOYOLAP'
   STORE "C:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
   STORE "C:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
   STORE "C:\SISTEMAS\CAJA\CAJAA" TO PATHCAJ
CASE GETENV("EQUIPO")="MICASA"
      STORE "D:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN,PATHCAJ
      STORE "D:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
      STORE "D:\SISTEMAS\CAJA\CAJAA" TO PATHCAJ      
CASE FULL(CURDIR())="F:\SISTEMAS\COMPRAS\NOVOGAR\"
     STORE "G:\SISTEMAS\BACKUP\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
   	 STORE "G:\SISTEMAS\BACKUP\SISTEMAS\CAJA\CAJAA"     TO PATHCAJ
     STORE "G:\SISTEMAS\BACKUP\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
OTHERWISE
 STORE "H:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
 STORE "H:\SISTEMAS\CAJA\CAJAA"     TO PATHCAJ
  STORE "H:\SISTEMAS\COMPRAS\COMPRASA"     TO PATHCPR
ENDCASE
RETURN .T.
