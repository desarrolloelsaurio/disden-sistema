FUNCTION UBICA
PARAMETER UBI_LISTA,UBI_POSIC,UBI_NUMER,UBI_ARRAY
PRIVATE UBI_LISTA,UBI_POSIC,UBI_NUMER,UBI_AREA
UBI_AREA=ALIAS()
SELE POL
SET ORDER TO TAG LIMITE
SET NEAR ON
SEEK STR(UBI_LISTA,2)+STR(ABS(UBI_POSIC),2)+STR(UBI_NUMER,14,5)
SET NEAR OFF
SKIP -1
IF type ("UBI_ARRAY")#'L'
   COPY TO ARRAY UBI_ARRAY NEXT 2
ENDIF
IF !EMPTY(UBI_AREA)
SELE (UBI_AREA)
ENDIF
RETURN RECNO("POL")