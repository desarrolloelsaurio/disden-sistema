FUNCTION GET_POL
	PARAMETER HAYREAD,DAPRECIO
	@ 1,1 say 'COSTO' COLO SCHE 3
	@ 1,25 GET AGX[17] PICT '99,999.99'
	CLEA GETS
	@ 3,1 say xalis1 COLO SCHE 3
	@ 4,1 say xalis2 COLO SCHE 3
	@ 5,1 say xalis3 COLO SCHE 3
	@ 6,1 say xalis4 COLO SCHE 3
	FOR XA=18 TO 21
		IF SIGN(AGX[XA])=-1
			@ XA-15,25 GET AGX[XA] PICT '@R POL 99.99'
		ELSE
			@ XA-15,25 GET AGX[XA] PICT '@R % 9999.99'
		ENDIF
	NEXT
	IF HAYREAD
		READ
	ELSE
		CLEA GETS
	ENDIF
CAMBIO=UPDATE()
	IF DAPRECIO
	   @ 2,40 SAY XADOLS
	   @ 2,55 SAY XAUSS
	   FOR XA=18 TO 21
		  @ XA-15,40 SAY GET_PRE(MER.COSTODOL,XA-17,AGX[XA],PRO.COEFRES,.T.) PICT '99,999.99'
		  @ XA-15,55 SAY GET_PRE(MER.COSTODOL,XA-17,AGX[XA],PRO.COEFRES) PICT '99,999.99'
	   NEXT
	ENDIF
RETURN CAMBIO
