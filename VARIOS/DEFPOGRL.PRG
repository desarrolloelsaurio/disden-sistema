* PARAMETRO 4) CONTENIDO DEL CAMPO
* PARAMETRO 5) LARGO DE LA VARIABLE A POPAPEAR
* PARAMETRO 6) TEXTO PARA MESSAGE
FUNCTION DEFPOGRL
	PARAMETERS REX,COX,DEF_NAME,DEF_CAMPO,DEF_LARGO,DEF_MESS
	M.REX=XXTONUM(M.REX)
	M.COX=XXTONUM(M.COX)
	M.DEF_LARGO=XXTONUM(M.DEF_LARGO)
	M.DEF_LARGO=IIF(EMPTY(M.DEF_LARGO),20,M.DEF_LARGO)
	DEFI POPU (DEF_NAME) ;
	FROM max(2,REX),COX ;
	TO 22,MIN(79,COX+DEF_LARGO) ;
	PROMPT FIELD &DEF_CAMPO ;
	MESS IIF(EMPTY(DEF_MESS),"",DEF_MESS) ;
	SHAD ;
	COLOR SCHE 6 ;
	IN SCREEN
	ON SELE POPU (DEF_NAME) DO RESP1
RETURN .T.
