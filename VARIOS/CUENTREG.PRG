* CUENTA LA CANTIDAD DE REGISTROS EN UNA BASE
FUNCTION CUENTREG
PARAMETER C_ALIAS,C_ORDEN,C_FISC
ALIASANT=ALIAS()
ORDENANT=ORDER()
SELE (C_ALIAS)
SET ORDER TO TAG (C_ORDEN)
COUNT TO C_CUANTOS FOR EVAL(C_FISC)
IF !EMPTY(ALIASANT)
   SELE (ALIASANT)
   IF !EMPTY(ORDENANT)
      SET ORDER TO TAG (ORDENANT)
   ENDIF
ENDIF
RETURN C_CUANTOS 