FUNCTION GETFOGRL
PARAMETER G_VAR,G_CONTENIDO,G_CONTROL,G_TIPO
* G_VAR      : NOMBRE DE LA VARIABLE } "MORATUP"
* G_CONTENIDO: NOMBRE DEL CAMPO DE LA BASE MIX QUE CARGA } "MIX.TEXTO2"
* G_CONTROL  : NOMBRE DE LA VARIABLE DE CONTROL } "HAYTUP"
* G_TIPO     : TIPO DE LA VARIABLE } "C","N","D","L"
IF XSEEK(G_VAR,"MIX","FOXGRL")   
   STORE EVAL(G_CONTENIDO) TO &G_VAR
   STORE .T. TO &G_CONTROL
ELSE
   DO CASE
   CASE G_TIPO="N"
   STORE NUL TO &G_VAR
   CASE G_TIPO="C"   
   STORE "" TO &G_VAR   
   CASE G_TIPO="D"   
   STORE {} TO &G_VAR   
   ENDCASE   
ENDIF
RETURN EVAL(G_VAR)
