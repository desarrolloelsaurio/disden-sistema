PROCEDURE OFF_RELA
PRIVATE OFF_A,OFF_B,OFF_BASE
WAIT "BORRANDO ARCHIVOS RELACIONALES" WIND NOWA
OFF_BASE=ALIAS()
FOR OFF_A=1 TO SELE(1)
   IF !EMPTY(ALIAS(OFF_A))
      SELE(OFF_A)
      FOR OFF_B=1 TO 10
         IF EMPTY(RELA(OFF_B))
            EXIT
         ELSE
            SET RELA OFF INTO (TARGET(OFF_B))
         ENDIF
      NEXT
   ENDIF
NEXT
IF !EMPTY(OFF_BASE)
   SELE (OFF_BASE)
ENDIF
RETURN WCL()
