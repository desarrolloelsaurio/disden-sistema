* RECIBE LAS HORAS COMO SEXAGESIMALES
* LAS TRANSFORMA EN DECIMALEA PARA PODER SUMARLAS
* LAS TRANSFORMA NUEVAMENTE EN SEXAGESIMALES PARA DEVOLVER EL RESULTADO
FUNCTION SUMAHORA
	PARAMETER HORA1,HORA2,RESTA

	HORA1=SEXTODEC(HORA1)
	HORA2=SEXTODEC(HORA2)
	IF RESTA
  	H_TOTAL=HORA1-HORA2	
	ELSE
	H_TOTAL=HORA1+HORA2
	ENDIF
	H_ENTERO=INT(H_TOTAL)
	H_MINUTO=H_TOTAL-H_ENTERO
	H_MINUTO=DECTOSEX(H_MINUTO)
RETURN H_ENTERO+H_MINUTO
