CLOSE DATA
SET EXCL OFF
SET SAFE ON 
SET CONF ON
SET EXCL OFF
DIR_ORIG=GETD(CURD(),"DIRECTORIO DE ORIGEN")
DIR_DEST=GETD(CURD(),"DIRECTORIO DE DESTINO")
STORE "NO" TO M.RESPUESTA
CLEA
@ 10,10 SAY "Directorio de Origen : "+DIR_ORIG
@ 12,10 SAY "Directorio de Destino: "+DIR_DEST
@ 15,10 SAY "CONFIRMA S/N " GET M.RESPUESTA
READ
IF M.RESPUESTA="SI"
=ADIR(PIPO,DIR_ORIG+"*.DBF")
FOR A=1 TO ALEN(PIPO,1)
WAIT PIPO[A,1] WIND NOWA
USE (DIR_ORIG+PIPO[A,1])
COPY TO (DIR_DEST+PIPO[A,1]) WITH CDX
NEXT
ENDIF
CLOSE DATA