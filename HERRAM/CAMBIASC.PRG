CLOSE DATA
USE GETF("SCX")
=AFIELD(PIPO)
BUSCA="cli."
REEMPLAZA='per.'
STORE 1 TO VECES
DO WHILE !EMPTY(VECES)
STORE 0 TO VECES
SCAN
   FOR A=1 TO ALEN(PIPO,1)
      IF PIPO[A,2]#"L" .AND. PIPO[A,2]#"N" 
        CONTENIDO=EVAL(PIPO[A,1])
        IF !EMPTY(AT(BUSCA,CONTENIDO))
        ? PIPO[A,1]
        ? EVAL(PIPO[A,1])
        ? REPL("-",80)
           REPL (PIPO[A,1]) WITH STUFF(CONTENIDO,AT(BUSCA,CONTENIDO),LEN(BUSCA),REEMPLAZA)
           ?? chr(7)
           CLEA
           VECES=1
        ENDIF
     ENDIF
   NEXT
ENDSCAN
ENDDO
CLOSE ALL
   