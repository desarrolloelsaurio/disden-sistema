SET TALK OFF
SET SAFE OFF
ON ERROR
CLEA
BUSCA="nul"
REEMP='0'
=ADIR(PIPO,'*.prg')
LARGOR=ALEN(PIPO,1)
IF FILE("NUEVOS.BAT")
   ERASE NUEVOS.BAT
ENDIF
FH=FCREATE("NUEVOS.BAT",0)
=FPUTS(fh,"PROGRAMAS MODIFICADOS EL DIA "+dtoc(DATE()))
=FPUTS(fh,"MD G:\SISTEMAS\TMP")
A=""
CLEA
FOR PSC=1 TO LARGOR
   IF PIPO[PSC,3]>=DATE()
      ? PIPO[PSC,1]
      ?? PIPO[PSC,3] AT 15
      =FPUTS(fh,"-- "+PIPO[PsC,1]+' !!')
   endif
ENDFOR
=FCLOSE(FH)
? "LOS PROGRAMAS MODIFICADOS ESTAN EN NUEVOS.BAT"
RETURN
