FUNCTION LPAT0
	=WORKING()
	TMP=GENTMP()
	SET ORDER TO TAG CODCLI IN PER
	SELE CCL
	SET RELA TO CODCLI INTO PER
	IF  TYPE("ORDCLI")#'L' .OR. ORDCLI
		IF ".T."=FISC
			INDE ON CODCLI TO (TMP) COMP
		ELSE
			INDE ON CODCLI TO (TMP) FOR EVAL(FISC) COMP
		ENDIF
	ELSE
		IF ".T."=FISC
			INDE ON PER.CLIENTE TO (TMP) COMP
		ELSE
			INDE ON PER.CLIENTE TO (TMP) FOR EVAL(FISC) COMP
		ENDIF
	ENDIF
	GO TOP
	STORE NUL TO TDEBE,THABER,TCREDITO
	STORE NUL TO DEBE,HABER,CREDITO,ELCLIENTE,ELCODIGO
	=LPATO()
	ACLA=PAIP+"  CODIGO  "+PAIP+PADC("CLIENTE",30)+PAIP+;
	PADC("DEBE",XACDIGI)+PAIP+;
	PADC("HABER",XACDIGI)+PAIP+;
	PADC("SALDO",XACDIGI)+PAIP+;
	PADC("CREDITO",XACDIGI)+PAIP+;
	PADC("ESTADO PATR.",XACDIGI)+PAIP
	linea=repl("=",len(acla))
	=UNWORK()
RETURN .T.
