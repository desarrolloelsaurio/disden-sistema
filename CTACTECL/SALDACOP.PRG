FUNCTION SALDACOP
PARAMETER ELGIL   
   SELE CCL
   SET ORDER TO
   TMP1=GENTMP()
   SORT ON FECHAOP TO (TMP1) FOR CODCLI=M.ELGIL
   USE (TMP1) IN 0 ALIAS TMP
   SELE TMP
   REPL ALL GY_DEBE WITH 0,GY_HABER WITH 0
   REPL GY_DEBE WITH MONTO FOR COMPRRE="FA" .OR. ;   
	COMPRRE="ND" .OR. ;   
	COMPRRE="SD" 
   REPL GY_HABER WITH ABS(MONTO) FOR EMPTY(GY_DEBE)
   CALC SUM(GY_DEBE), SUM(GY_HABER) TO TGY_DEBE, TGY_HABER
   STORE TGY_DEBE-TGY_HABER TO TGY_SALDO
   
   TOTPAGO=TGY_HABER
   SCAN FOR !EMPTY(GY_DEBE)
   	IF GY_DEBE>TOTPAGO
   		EXIT
   	ENDIF
   	TOTPAGO = TOTPAGO - GY_DEBE
   ENDSCAN
   LACOMI =  0
   IF !EOF()
	REPL GY_DEBE WITH GY_DEBE - TOTPAGO
	M.PAGARA = M.MONTO
   	DO WHILE !EOF()
   		IF M.PAGARA > GY_DEBE
   			LACOMI = LACOMI + (GY_DEBE * COMISIP)/ MONTO
   			M.PAGARA = M.PAGARA - GY_DEBE
   		ELSE
   			LACOMI = LACOMI + (M.PAGARA * COMISIP)/ MONTO
   			EXIT
   		ENDIF
	   	SKIP
   	ENDDO
   ENDIF
   =OFF_TMP()
RETURN LACOMI
