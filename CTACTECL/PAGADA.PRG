FUNCTION PAGADA
PARAMETER PAG_FACTURA,PAG_SALDO
PAG_AREA=ALIAS()
SELE CCL
SET ORDER TO TAG NUMERORE
PAG_TOTAL=1000000
PAG_SALIDA=.F.
IF SEEK(PAG_FACTURA)
PAG_TOTAL=NUL
SCAN WHILE CCL.NUMERORE=PAG_FACTURA
IF EMPTY(CCL.COMPRRE) .OR. CCL.COMPRRE='FA' .OR. CCL.COMPRRE='ND'
	 PAG_TOTAL=PAG_TOTAL+CCL.MONTO
ELSE
	 PAG_TOTAL=PAG_TOTAL-CCL.MONTO
ENDIF
ENDSCAN
PAG_SALIDA=(PAG_TOTAL<1)
ENDIF
IF !EMPTY(PAG_AREA)
SELE (PAG_AREA)
ENDIF
RETURN IIF(PAG_SALDO,PAG_TOTAL,PAG_SALIDA)
