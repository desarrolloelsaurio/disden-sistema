FUNCTION LPAT1
	IF CCL.CODCLI#ELCODIGO
		=LPATO(.T.)
	ENDIF
	IF EMPTY(CCL.COMPRRE) .OR. CCL.COMPRRE='ND' .OR. CCL.COMPRRE='FA'
		DEBE=DEBE+ABS(MONTO)
	ELSE
		HABER=HABER+ABS(MONTO)
		IF CCL.COMPRRE="RE" .AND. LEFT(DETALLE,6)="CHEQUE" .AND. !PAGADA
			CREDITO=CREDITO+ABS(MONTO)
		ENDIF
	ENDIF
RETURN .T.
