FUNCTION LAGR0
	=WORKING()
	TMP=GENTMP()
	SET ORDER TO TAG CODCLI IN PER
	SELE CCL
	SET RELA TO CODCLI INTO PER
	DO CASE
	CASE TYPE("ORDCLI")#'L' .OR. ORDCLI
		DO CASE
		CASE '.T.'=FISC
			INDE ON CODCLI+STR(VAL(SUBSTR(COMPR,7))) TO (TMP) COMP
		OTHERWISE
			INDE ON CODCLI+STR(VAL(SUBSTR(COMPR,7))) TO (TMP) FOR EVAL(FISC) COMP
		ENDCASE
	OTHERWISE
		DO CASE
		CASE '.T.'=FISC
			INDE ON PER.CLIENTE+STR(VAL(SUBSTR(COMPR,7))) TO (TMP) COMP
		OTHERWISE
			INDE ON PER.CLIENTE+STR(VAL(SUBSTR(COMPR,7))) TO (TMP) FOR EVAL(FISC) COMP
		ENDCASE
	ENDCASE
	GO TOP
	STORE NUL TO TDEBE,THABER,CDEBE,CHABER
	STORE NUL TO DEBE,HABER,CREDITO,ELCLIENTE,ELCODIGO,LAFACTURA,LAFACT1
	TTU=TT
	=LAGRO()
	=LAGRO1()
	ACLA=PAIP+PADC("COMPROBANTE",15)+PAIP+;
		PADC("DEBE",XACDIGI)+PAIP+;
		PADC("HABER",XACDIGI)+PAIP+;
		PADC("SALDO",XACDIGI)+PAIP
	LINEA=REPL("=",LEN(ACLA))
	=UNWORK()
RETURN .T.
