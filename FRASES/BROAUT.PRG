PROCEDURE BROAUT
PARAMETER SIGUE
CLEA READ
=OFF_RELA()
DEFINE WIND AUT FROM 0,0 TO 12,44 TITL " F1: COD / F2: AUT " DOUB
ACTI WIND AUT
SELE AUT
IF SIGUE
BROW FIELD CODIGO,AUTOR ;
IN AUT NOWA
ELSE
BROW FIELD CODIGO:V=AUT3():E="CODIGO EXISTE" ,;
AUTOR:P="@!":V=!XSEEK(AUTOR,"AUT","AUTOR"):E="AUTOR EXISTE" ;
IN AUT 
ENDIF
RETURN

