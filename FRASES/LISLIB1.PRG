* LISTA LOS LIBROS
WAN=WONTOP()
=WIN0()
ALA=ALIAS()
SELE LIB
ORD=ORDER()
SET ORDER TO TAG LIBRO
STORE 0 TO REN
CLEA
SCAN
COSA=LIBRO+" "+AUT.AUTOR
? LEFT(COSA,79)
REN=REN+1
   IF REN=23
      IF INKEY(0,"HM")=27
         EXIT
      ELSE
         CLEA
         STORE 0 TO REN
      ENDIF
   ENDIF
ENDSCAN
IF LAST()#27
=INKEY(0,"HM")
ENDIF
IF !EMPTY(ORD)
SET ORDER TO TAG (ORD)
ENDIF
RELE WIND WIN0
IF !EMPTY(WAN)
ACTI WIND (WAN)
ENDIF
SELE (ALA)
RETURN