FUNCTION AJUSTE
	PARAMETER AJ_TX,AJ_LAR,AJ_CHAR,AJ_IZODER
	AJ_TX=ALLTRIM(AJ_TX)
	DO WHILE !EMPTY(AJ_TX)
		IF LEN(AJ_TX)<=AJ_LAR
			? AJUSTE1(AJ_TX)
			EXIT
		ELSE
			AJ_POS=RAT(" ",LEFT(AJ_TX,AJ_LAR))
			AJ_TX1=LEFT(AJ_TX,AJ_POS-1)
			AJ_TX=ALLTRIM(SUBSTR(AJ_TX,AJ_POS+1))
			? AJUSTE1(AJ_TX1)
		ENDIF
	ENDDO
RETURN .T.

FUNCTION AJUSTE1
	PARAMETER AJ_TTT
	DO CASE
	CASE AJ_IZODER="I"
		AJ_SALE=PADR(AJ_TTT,AJ_LAR,AJ_CHAR)
	CASE AJ_IZODER="D"
		AJ_SALE=PADL(AJ_TTT,AJ_LAR,AJ_CHAR)
	OTHERWISE
		AJ_SALE=PADC(AJ_TTT,AJ_LAR,AJ_CHAR)
	ENDCASE
RETURN AJ_SALE
