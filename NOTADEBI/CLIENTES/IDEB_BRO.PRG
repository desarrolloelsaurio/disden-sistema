FUNCTION IDEB_BRO
IF UPPER(VARREAD())="PAANULAR"
   ON KEY LABEL ENTER KEYB CHR(23)
   SELE FAC
   SET ORDER TO TAG CODCLI
   ELTITL=" FACTURAS DE "+ALLTRIM(PER.CLIENTE)+" "
   DEFI WIND IDEBBROW FROM 0,0 TO 10,68 TITL ;
   			ELTITL ;
   			DOUB SHAD COLO SCHE 8
   =CENTWIN("IDEBBROW")
   SELE FAC
   SET ORDER TO TAG CODCLI
   GO BOTT
   BROW FIEL ;
     XTIPO=IIF(EMPTY(TIPO) .OR. TIPO="FA",'FACT',IIF(TIPO='NC','N.CR','N.DE')):R:H="TIPO", ;
     FACTURA:R:H=PADC("FACTURA",FSIZE('FACTURA')), ;
     FECHAEM:R:H=" FECHA  ", ;
     MONTO:R:H=PADC("MONTO",14):P="999,999,999.99" ;
     KEY PER.CODCLI  ;
     IN IDEBBROW
   =RELEWIN("IDEBBROW")
   ON KEY LABEL ENTER
   IDEB_SALIDA=IIF(LAST()=27,IIF(ESNUM,0,""),FAC.FACTURA)
   KEYB CHR(13)
ELSE
   IDEB_SALIDA=M.PAANULAR
ENDIF
RETURN IDEB_SALIDA


