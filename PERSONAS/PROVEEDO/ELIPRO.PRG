#DEFINE NUL    0                                 && NUL
FUNCTION ELIPRO
PARA MSG,R1,C1
IF !USED("PER")
   =OPPRO()
ENDIF   
STORE NUL TO RESPUESTA
=IIF(EMPTY(MSG),.T.,WNCL("Proveedor "+MSG))
