FUNCTION LLPER
	PARAMETER LL_BASE,LL_AUDI
	STORE .F. TO LL_RECU
	STORE ALIAS() TO LL_ALIAS
	LL_SAL=CHR(CARTEL("EL REGISTRO ESTA BORRADO DE LA BASE DE DATOS",;
		"PARA PODER TRABAJAR SOBRE EL MISMO",;
		"DEBERA RECUPERARLO INDEFECTIBLEMENTE",;
		"DESEA HACERLO (S/N)"))

	IF UPPER(LL_SAL)="S"
		IF CONFIRMA("RECUPERAR "+LL_AUDI,.T.,10,0)
			SELE (LL_BASE)
			=LOCK() .OR. LOK()
			RECA RECO RECNO()
			=REPUSE()
			UNLO IN (LL_BASE)
			=IAUD(LL_AUDI)
			STORE .T. TO LL_RECU
		ENDIF
	ENDIF
	IF !EMPTY(LL_ALIAS)
		SELE (LL_ALIAS)
	ENDIF
RETURN LL_RECU
