FUNCTION ELIAUT
PARAMETER MSG,R1,C1
IF !EMPTY(MSG)
   WAIT "Autor "+MSG WIND NOWA
ENDIF
SELE PER
IF EMPTY(ON("KEY","F3")) .and. !clipop
   STORE .T. TO BORRAKEY
   ON KEY LABEL F3 ;
   return SEEKTECX(30,"PER","PER.CLIENTE","PER.CODCLI","AUTORES")
ELSE
   STORE .F. TO BORRAKEY
ENDIF
RESPUESTA=IIF(CLIPOP,;
  PARAELI("CLIENTES",1),;
  ELIPER1('Autor '+MSG,'PER','CODCLI',10,"A"))
RETURN WCL() .AND. ;
  IIF(BORRAKEY,OFF_F2(),.T.) .AND. ;
  IIF(LAST()=27 .OR. READKEY()=12,.F.,RESPUESTA)
