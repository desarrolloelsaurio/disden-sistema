FUNCTION LCCIPZ0
	#DEFINE NUL    0                               && NUL
	#DEFINE PAIP   "|"                             && PAIP

	=WORKING()
	DIME TTL[CANT_MAX],CTRL[CANT_MAX]
	HAY=.F.
	IF VARIABLE[9]
		STOR NUL TO TTL
		STORE .T. TO HAY, CTRL[9]
	ENDIF
	IF !HAY
		RELE TTL,CTRL
	ENDIF
	=OPCLI()
	SELE CCI
	SET ORDER TO TAG CODCLI
	SET ORDER TO TAG CODCLI IN PER
	SET ORDER TO TAG PRPCOD IN PER
	SET RELATION TO CCI.CODCLI INTO PER
	SET RELATION TO CCI.CODCLI INTO PER ADDI
	TMP=GENTMP()
	INDE ON CCI.CODCLI+DTOS(FECHAOP) TO (TMP) FOR &FISC COMP
	ACLA=PAIP
	FOR A=1 TO CANT_MAX
		IF A=9
			IF VARIABLE[9]
				ACLA=ACLA+PADC('DEBE',TEXTO[A,2])+PAIP+PADC('HABER',TEXTO[A,2])+PAIP+PADC('SALDO',TEXTO[A,2])+PAIP
			ENDIF
		ELSE
			STORE ACLA+IIF(VARIABLE[A],PADC(TEXTO[A,1],TEXTO[A,2])+PAIP,'') TO ACLA
		ENDIF
	NEXT
	LINEA=REPL("=",LEN(ACLA))
	tt='Listado de Cta. Cte. Impuestos'+TTQUE
	=UNWORK()
RETURN .T.
