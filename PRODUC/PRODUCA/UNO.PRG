CLOSE DATA
SELE 0
USE TALLERES ALIAS TAL ORDER TAG TALCOD
SELE 0
USE ORFABDAT ALIAS FAX 
SORT ON NUMERO,EF,REMITO FOR TIPO="@" .AND. ;
!EMPTY(NUMERO) .AND. ;
!EMPTY(REMITO) .AND. ;
!EMPTY(EF) ;
FIELD NUMERO,REMITO,EF TO UNO
SELE 0
USE UNO
INDEX ON NUMERO UNIQ TAG NUMERO
SET ORDER TO TAG NUMERO
COPY TO DOS
SELE 0
USE DOS
CLEA
STORE DATE() TO FECHA
STORE 0 TO DIAS

@ 1,1 SAY "FECHA LIMITE:" GET FECHA
@ 2,1 SAY "CANTIDAD DE DIAS:" GET DIAS
READ
FECHAIN=FECHA-DIAS-1
DELE FOR EF<FECHAIN
PACK
SELE FAX
SET ORDER TO TAG NUMTRU
SELE DOS
SCAN
? NUMERO
SELE FAX
SET RELA TO TALLER INTO TAL
SEEK DOS.NUMERO
SCAN WHILE NUMERO=DOS.NUMERO
   IF VAL(TAL.ETAPA)>7
      ? TAL.TALLERES
      ??"|"
      ?? FAX.SEC
      ??"|"
      ?? FAX.SF
   ENDIF
ENDSCAN
SELE DOS
ENDSCAN