FUNCTION ESJEFE
PARAMETER LAPOS
* SIEMPRE: MARCELO, JUAN, HECTOR, GOYO, BATA
* LAPOS=1 -> MARCOS
* LAPOS=2 -> GRUPO COMPRAS
* LAPOS=3 -> GRUPO MARCOS + FERNANDA
* LAPOS=4 -> GRUPO STOCK
* LAPOS=5 -> SERGIO
* LAOPS=6 -> HORACIO Y JUAN

M.LAPOS=IIF(EMPTY(M.LAPOS),0,M.LAPOS)
M.JEF_NOM=ALLTRIM(UPPER(USADOR))
DO CASE
CASE INLIST(M.JEF_NOM,"BATA","MARCELO","HECTOR","GOYO")
RETURN .T.
CASE M.LAPOS=1
     RETURN M.JEF_NOM="MARCOS"
CASE M.LAPOS=3
     RETURN (M.JEF_NOM="FERNANDA" .OR. M.JEF_NOM="MARCOS")
CASE M.LAPOS=2
     RETURN GETENV("ELGRUPO")="COMPRAS"
CASE M.LAPOS=4
     RETURN GETENV("ELGRUPO")="STOCK"
CASE M.LAPOS=5
     RETURN M.JEF_NOM="SERGIO"
CASE M.LAPOS=6
     RETURN .T.
ENDCASE
RETURN .F.
