FUNCTION OKTHI
	#DEFINE ENTERCON "PULSE [ENTER] PARA CONTINUAR" && ENTERCON
	IF !XSEEK(M.CODMADRE+M.TELCODPRO,"THI","PARIENTE")
		IF !XSEEK(M.TELCODPRO,"THI","TELCODPRO")
			=AGRABAR("THI")
			SELE TELS
			IF XSEEK(M.TELCODPRO,"TELS","TELCODPRO")
				=LOCK() .OR. LOK()
				REPL TELS.MADRE WITH M.CODMADRE
				UNLO IN TELS
			ENDIF
		ELSE
			WAIT "TELA "+ALLTRIM(TEL.TELA)+" YA ASIGNADA - "+ENTERCON WIND
		ENDIF
	ELSE
		WAIT "RELACION EXISTENTE -"+ENTERCON WIND
	ENDIF
	SELE TELS
	SCAT MEMV BLAN
	SELE THI
RETURN SGET("TMA")
