FUNCTION LCCP10
#DEFINE PAIP   "|"                               && PAIP
? PAIP
=IIF(VARIABLE[1],QOUT(DTOC(FECHAOP)+PAIP),"")
=IIF(VARIABLE[2],QOUT(DTOC(FECHAVE)+PAIP),"")
=IIF(VARIABLE[3],QOUT(DETALLE+PAIP),"")
=IIF(VARIABLE[4],QOUT(COMPR+' '+COMPRRE+PAIP),"")
=IIF(VARIABLE[5],QOUT(NUMERORE+PAIP),"")
=IIF(VARIABLE[6],QOUT(TRANS(GY_DEBE,ELPI1)+PAIP),"")
=IIF(VARIABLE[7],QOUT(TRANS(GY_HABER,ELPI1)+PAIP),"")
ELSALDO=GY_DEBE-GY_HABER
STORE TOTAL[1]+GY_DEBE TO TOTAL[1]
STORE TOTAL[2]+GY_HABER TO TOTAL[2]
STORE TOTAL[3]+ELSALDO TO TOTAL[3]
=IIF(VARIABLE[8],QOUT(TRANS(TOTAL[3],ELPI1)+PAIP),"")
RETURN .T.