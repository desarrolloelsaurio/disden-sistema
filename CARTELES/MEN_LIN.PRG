* PRESENTA UN CARTEL EL ALGUN LADO
* MEN_TEX 		: TEXTO A PRESENTAR
* MEN_REN      : RENGLON DE LA PRESENTACION
* MEN_COL		: COLUMNA INICIAL DE LA PRESENTACION
* MEN_ANC		: ANCHO PARA CENTRAR
* MN_ESPERA		: (L) -> DEVUELVE INKEY(NUL,'HM')
* MENEN_VENT   : (L) -> NO ACTIVA SCREEN SI ESTA EN .T.
FUNCTION MEN_LIN
PARAMETER MEN_TEX,MEN_REN,MEN_COL,MEN_ANC,MN_ESPERA,MENEN_VENT
PRIVATE MEN_TEX,MEN_REN,MEN_COL,MEN_ANC,MN_ESPERA,MENEN_VENT,CUAN_PAR,VENTANT
m.cuan_par=parameter()
#DEFINE NUL    0                                 && NUL
#DEFINE BOTOM  "  "+repl("°",78)                 && BOTOM
M.MEN_ANC=IIF(M.CUAN_PAR<4 .OR. EMPTY(M.MEN_ANC),80,M.MEN_ANC)
M.MEN_COL=IIF(M.CUAN_PAR<3 .OR. EMPTY(M.MEN_COL),NUL,M.MEN_COL)
M.MEN_REN=IIF(M.CUAN_PAR<2 .OR. EMPTY(M.MEN_REN),IIF(_WINDOWS,SROWS()-1,24),M.MEN_REN)
m.ventant=wontop()
IF !MENEN_VENT
   acti scre
ENDIF
IF _WINDOWS
   @ SROWS()-1,1 SAY SPACE(207) COLO I FONT "ARIAL",9
   IF RIGHT(M.MEN_TEX,1)#'°'
      @ SROWS()-1,(SCOLS()-TXTWIDTH(M.MEN_TEX,'ARIAL',9)* ;
        FONTMETRIC(6,'ARIAL',9)/FONTMETRIC(6))/2  ;
        SAY M.MEN_TEX FONT 'ARIAL',9 COLO W+
   ENDIF
ELSE
   @ MEN_REN,MEN_COL say padc(m.MEN_TEX,m.MEN_ANC)
ENDIF
if !empty(m.ventant)
   acti wind (m.ventant)
endif
return IIF(MN_ESPERA,INKEY(NUL,'HM'),.t.)
