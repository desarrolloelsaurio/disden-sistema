PROCEDURE XPRA
	ULPR=HORA_ULP(PROGRAM())
	IF CHEQSEG()
		=MEN_LIN('Generando Nuevo Indice')
		=FLOCK("PRA") .OR. LOK("PRA")
		=FLOCK("PRX") .OR. LOK("PRX")
		=DOTALK()
		=OPPRAX()
		SELE PRX
		SET ORDER TO
		INDEX ON CODPRA         		   TAG CODPRA UNIQUE
		INDEX ON CODPRA+CODPRX             TAG CODPRX UNIQUE
		INDEX ON CODPRA+CODPRX             TAG CODPRX1
		INDEX ON CODPRA+CODPRX+TIPO+UNIDAD TAG UNIDAD
		INDEX ON CODPRA+CODPRX+UNIPRA      TAG UNIPRAD FOR !EMPTY(UNIPRA)
		INDEX ON CODPRA+CODPRX             TAG UNIPRA FOR !EMPTY(UNIPRA)		
		SELE PRA
		SET ORDER TO
		INDE ON CODPRA TAG CODPRA
		INDE ON PRACTICA TAG PRACTICA
		INDE ON PRACTICABR TAG PRACTICABR
		INDE ON CODPRA+"UNI"+UNIDAD1 TAG UNIDAD1
		INDE ON CODPRA+"UNI"+UNIDAD2 TAG UNIDAD2
		INDE ON CODPRA+TIPO3+UNIDAD3 TAG UNIDAD3
		=REOPPRA()
		=UNTALK()
		TX='CREA INDICE '
		=IAUD('REINDEXA PRACTICAS')
	ELSE
		=IAUDI()
	ENDIF
RETURN
