FUNCTION FIN_SUM
	PARAMETER COSA2,COSA3,COSA4
	PRIVATE COSA2,COSA3,COSA4,SALIDA,XX
	SALIDA=''
	IF !HAY
		SALIDA=.F.
	ELSE
		VEZ=1
		SALIDA=PAIP
		FOR XX=1 TO CANT_MAX
			IF VARIABLE[XX]
				IF VEZ=1
					VEZ=2
					SALIDA=SALIDA+PADR(COSA2,TEXTO[XX,2])+PAIP
				ELSE
					IF CTRL[XX]
						IF PARA()<3
							SALIDA=SALIDA+STR(COSA3[XX],TEXTO[XX,2],IIF(TEXTO[XX,2]>6,2,0))+PAIP
						ELSE
							SALIDA=SALIDA+TRAN(COSA3[XX],COSA4[XX])+PAIP
						ENDIF
					ELSE
						SALIDA=SALIDA+SPACE(TEXTO[XX,2])+PAIP
					ENDIF
				ENDIF
			ENDIF
		ENDF
	ENDIF
RETURN SALIDA
