FUNCTION LRESP0
	=WORKING()
	SELE (c_BASE)
	GO TOP
	IF ".T."=FISC
		INDE ON EVAL(c_IND) TO (GENTMP()) COMP
	ELSE
		INDE ON EVAL(c_IND) TO (GENTMP()) FOR &FISC COMP
	ENDIF
	ACLA=HAZ_ACLA()
	GO TOP
	ELCORTE=EVAL(c_COR)
	ELTEXTO=EVAL(c_TEX)
	STOR NUL TO CASOS,TOTAL,GTOTAL
	LINEA=REPL("=",LEN(ACLA))
	=UNWORK()
RETURN .T.
