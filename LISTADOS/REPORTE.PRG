FUNCTION REPORTE
	PARAMETER R_REPOR,R_CONDIC
	ULPR=ALLTRIM(R_REPOR)
	R_ESTA=ULPR+".FRX"
	IF FILE(R_ESTA)
		=unwork()
		=WIN0()
		RELE FIN
		PUBL FIN
		_PEJECT="NONE"
		_RMARGIN=90
		_LMARGIN=0
		_PLINENO=NUL
		_PAGENO=1
		_RMARGIN=255
		_PLOFFSET=NUL
		_ALIGNMENT='LEFT'
		_PADVANCE="LINEFEEDS"
		_WRAP=.F.
		IF EMPTY(R_CONDIC)
			REPO FORM (R_REPOR) TO NULL.TMP
		ELSE
			REPO FORM (R_REPOR) ;
				TO NULL. FOR &R_CONDIC
		ENDIF
		=IAUD(ALLTRIM(R_REPOR)+'-'+IIF(EMPTY(R_CONDIC),"",R_CONDIC))
		=RELEW()
		_WRAP=.F.
	ELSE
		=unwork()
		=CARTEL("EL ARCHIVO "+R_ESTA,;
			"NO ESTA EN EL SUBDIRECTORIO CORRESPONDIENTE",;
			"ES IMPOSIBLE GENERAR EL LISTADO",;
			"AVISE A SU PROGRAMADOR")
	ENDIF
RETURN .T.
