FUNCTION GETPATH
IF GETENV("EQUIPO")='ARROYO' .OR. ;
     GETENV("EQUIPO")="EQUIPA"
   DO CASE
   CASE GETENV("VIEJO")="SI"
      STORE "C:\SISTVIE\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
      STORE "C:\SISTVIE\COMPRAS\COMPRASA" TO PATHCPR
      STORE "C:\SISTVIE\CAJA\CAJAA" TO PATHCAJ
   CASE GETENV("MAQUINA")="CLIENTE"
      STORE "D:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN,PATHCAJ
      STORE "D:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
   OTHERWISE
      STORE "C:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
      STORE "C:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
      STORE "C:\SISTEMAS\CAJA\CAJAA" TO PATHCAJ
   ENDCASE
ELSE
IF GETENV("EQUIPO")="NOVOLAP" .OR. GETENV("EQUIPO")="GOYOLAP"
   STORE "C:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN,PATHCAJ
   STORE "C:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
   STORE "C:\SISTEMAS\CAJA\CAJAA" TO PATHCAJ
ELSE
   IF GETENV("EQUIPO")="MICASA"
      STORE "D:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
      STORE "D:\SISTEMAS\CAJA\CAJAA" TO PATHCAJ
      STORE "D:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
   ELSE
      IF FULL(CURDIR())="F:\SISTEMAS\CAJA\NOVOGAR\" .OR. ;
           FULL(CURDIR())="F:\SISTEMAS\VENTAS\NOVOGAR\"
         IF GETENV("VIEJO")="SI"
            STORE "G:\SISTEMAS\BACKUP\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
            STORE "G:\SISTEMAS\BACKUP\SISTEMAS\CAJA\CAJAA"     TO PATHCAJ
            STORE "G:\SISTEMAS\BACKUP\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
         ELSE
            STORE "H:\SISTEMAS\BACKUP\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
            STORE "H:\SISTEMAS\BACKUP\SISTEMAS\CAJA\CAJAA"     TO PATHCAJ
            STORE "H:\SISTEMAS\BACKUP\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
         ENDIF
      ELSE
         IF GETENV("VIEJO")="SI"
            IF FULL(CURDIR())="F:\SISTEMAS\STOCK\ENBASMER\NOVOGAR\CONTROL\"
               STORE "G:\SISTEMAS\BACKUP\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN,PATHCAJ,PATHCPR
            ELSE
               STORE "G:\SISTANT\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
               STORE "G:\SISTANT\CAJA\CAJAA"     TO PATHCAJ
               STORE "G:\SISTANT\COMPRAS\COMPRASA" TO PATHCPR
            ENDIF
         ELSE
            STORE "H:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHVEN
            STORE "H:\SISTEMAS\CAJA\CAJAA"     TO PATHCAJ
            STORE "H:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
         ENDIF
      ENDIF
   ENDIF
ENDIF
ENDIF
RETURN .T.
