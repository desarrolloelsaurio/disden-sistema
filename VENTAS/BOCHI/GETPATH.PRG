FUNCTION GETPATH
RELE PATH,PATHPRO,PATHCOM,PATHVEN,PATHCPR,PATHCAJ,PATHTMP
PUBL  PATH,PATHPRO,PATHCOM,PATHVEN,PATHCPR,PATHCAJ,PATHTMP
IF FILE("C:PATH.MEM")
	RESTORE FROM c:PATH ADDI
ELSE
	IF GETENV("EQUIPO")="MICASA"
		STORE "D:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHCOM,PATHVEN
		STORE "D:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
		STORE IIF(EMPTY(GETENV("TEMP")),"C:\TMP",GETENV("TEMP")) TO PATHTMP   
	ELSE
		IF GETE("NEWRED")='SI'
			STORE "F:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHCOM,PATHVEN,PATHCAJ
			STORE "F:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
			STORE IIF(EMPTY(GETENV("TEMP")),"C:\TMP",GETENV("TEMP")) TO PATHTMP         
		ELSE
			IF FILE("G:\MIXTA.DBF")
				STORE "G:" TO PATH,PATHPRO,PATHCOM,PATHVEN,PATHCAJ
				STORE "H:" TO PATHCPR
				STORE IIF(EMPTY(GETENV("TEMP")),"C:\TMP",GETENV("TEMP")) TO PATHTMP         
			ELSE
				STORE "C:\SISTEMAS\VENTAS\VENTASA" TO PATH,PATHPRO,PATHCOM,PATHVEN
				STORE "C:\SISTEMAS\COMPRAS\COMPRASA" TO PATHCPR
				STORE IIF(EMPTY(GETENV("TEMP")),"C:\TMP",GETENV("TEMP")) TO PATHTMP         
			ENDIF
		ENDIF
	ENDIF
ENDIF
RETURN .T.
