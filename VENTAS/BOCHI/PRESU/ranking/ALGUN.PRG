* COX     : COLUMNA IZQUIERDA MAYOR DE LA VENTANA
* TX      : TITULO DE LA VENTANA
* PICU    : OPCIONES POSIBLES SEPARADAS POR PUNTO Y COMA
* AL_VENT : OTRA VENTANA - MODIFICACION GOYO 08-18-95 00:06am
FUNCTION ALGUN
PARAMETER COX,TX,PICU,AL_VENT
PRIVATE COX,TX,PICU,AL_VENT,LA_VENTANA,CHOICE,REX
#DEFINE NUL    0                               && NUL
LA_VENTANA=IIF(EMPTY(AL_VENT),"ALGUNO",AL_VENT)
REX=OCCU(";",PICU)+IIF(_WINDOWS,5,4)
=MOVECENT(NUL,NUL,REX,IIF(_WINDOWS,COX*1.3,COX),LA_VENTANA,TX)
STORE NUL TO CHOICE
@ 1,1 GET CHOICE ;
  PICT PICU ;
  FUNC '*RT' ;
  COLO SCHE 19
  READ CYCLE
=RELEWIN(LA_VENTANA)
RETURN CHOICE
