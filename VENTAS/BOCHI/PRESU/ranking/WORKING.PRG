FUNCTION WORKING
* PRESENTA CARTEL TRABAJANDO (GRACIAS Mc RUBEL)
* MODIFICADO 13/08/95 19:00 PARA CARTEL MAS LINDO EN GUINDOUS - GOYO
FUNCTION WORKING
	PARAMETER WOR_TEXTO
	PRIVATE cur_win, cur_blink, ols_sch
	cur_win = woutput()
#IF "Wind" $ VERS()
       ACTI SCRE
	DEFINE WINDOW WRKWN1 ;
		AT 0.429, 53.000 ;
		SIZE 4.071,44 ;
		FONT "MS Sans Serif", 8 ;
		FLOAT ;
		NOCLOSE ;
		MINIMIZE ;
		NONE HALF SHAD ;
		FILL FILE "\WINDOWS\BMP\COARSE.BMP"
	ACTIVATE WINDOW WRKWN1 

@ 0.786,2.667 SAY "TRABAJANDO" ;
	FONT "Arial", 20 ;
	STYLE "BT" ;
	COLOR RGB(255,255,255,,,,)
@ 1.071,3.000 SAY "TRABAJANDO" ;
	FONT "Arial", 20 ;
	STYLE "BT" ;
	COLOR RGB(0,0,0,,,,)

#ELSE
		cur_blink = set('blink')
		SET BLINK ON
		old_sch = scheme(24)
		IF iscolor()
			SET COLOR OF SCHEME 24 TO gr+/gr+
			DEFINE WINDOW wrkwn1 FROM 02,61 TO 06,74 PANEL SHAD ;
				COLOR SCHEME 24
			ACTIVATE WINDOW wrkwn1
			SET COLOR OF SCHEME 24 TO r*/w,w/w,n/n
			DEFINE WINDOW wrkwn2 FROM 03,62 TO 05,73 PANEL ;
				COLOR SCHEME 24
			ACTIVATE WINDOW wrkwn2
			@ 00,00 say 'TRABAJANDO'
		ELSE
			SET COLOR OF SCHEME 24 TO /,/,w+/w
			DEFINE window wrkwn1 FROM 02,61 TO 06,74 PANEL SHAD ;
				COLOR SCHEME 24
			ACTIVATE window wrkwn1
			SET COLOR OF SCHEME 24 TO w+*/ ,w/w,n+/n
			DEFINE window wrkwn2 FROM 03,62 TO 05,73 PANEL ;
				COLOR SCHEME 24
			ACTIVATE window wrkwn2
			@ 00,00 say 'TRABAJANDO'
		ENDIF
		SET COLOR OF SCHEME 24 TO (old_sch)
#ENDIF
IF !empty(cur_win)
	ACTIVATE WINDOW (cur_win)
ELSE
	ACTIVATE screen
ENDIF
RETURN cur_win
