FUNCTION INIPRIN
 PARAMETER I_LINES
	SET ESCA ON
	I_LINES=IIF(EMPTY(I_LINES),72,I_LINES)
	ON KEY LABEL f1 DO aboprin
	ON ESCAPE DO aboprin
	SET DEVICE TO PRINT
	SET CONSOLE OFF
	SET PRINTER ON
    IF GETENV("EQUIPO")="MICASA"
		SET PRIN TO (SYS(3)+".TXT")
	ENDIF
	_PEJECT="NONE"
	_PLENGTH=I_LINES
	_PLINENO=0
	_PAGENO=1
	_PSCODE='{27}{64}{27}{67}{'+ALLTRIM(STR(I_LINES))+'}'
	_PLOFFSET=0
	_PADVANCE="LINEFEEDS"
	_pcopies=IIF(TYPE("COPIAS")="U" .OR. EMPTY(COPIAS),1,COPIAS)
RETURN .T.
