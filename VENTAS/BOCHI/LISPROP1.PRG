DO CASE
CASE BAR()=1
   SELE PRO
   STOR 0 TO RESPUESTA
   ACTI POPU PROPOP
   IF !EMPTY(RESPUESTA)
      GO TOP
      SKIP RESPUESTA-1
      PRV=RECNO()
      FISC='PROVEEDOR=PRV .or. LEN(ALLTRIM(ARTIC))=3'
      FISC1='PROVEEDOR=PRV'
      SELE MEr
      SET ORDER TO TAG artic
      DO LISPROP2
   ENDI
CASE BAR()=2
   SET MESS TO 'LISTA DE OFERTAS - ELECCION DE MERCADERIAS - INGRESE CARACTERISTICA A LISTAR'
   STOR 'XXX' TO m.filtro
   DEFI WIND WIN FROM 10,0 TO 14,79 DOUB
   ACTI WIND WIN
   @ 1,1 SAY "INGRESE CARACTERISTICA ('XXX' ANULA ) " GET m.filtro PICT 'AAA'
   READ
   RELE WIND WIN
   IF m.filtro#'XXX' .AND. !EMPTY(m.filtro)
      FISC='ARTIC=m.filtro'
      SELE MER
      SET ORDER TO TAG ARTIC
      DO LISPROP3
   ENDI
CASE BAR()=3
   DO LISPROP4
ENDC
RETURN
