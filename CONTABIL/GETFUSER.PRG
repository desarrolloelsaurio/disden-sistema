FUNCTION GETFUSER
C_POS=2
DIME POSIB[C_POS]
POSIB[1]="FOXUSER.DBF"
POSIB[2]="\PUBLIC\FOXUSER.DBF"
FOR XA= 1 TO C_POS
   IF FILE(POSIB[XA])
      SET RESO TO (POSIB[XA])
      SET RESO ON
      IF UPPER(SYS(2006))="VGA/MONO"
         SET DISP TO VGA25
         SET COLOR SET TO VGAMONO
      ELSE
         IF ISCOLOR()
            SET COLOR SET TO COLOR
         ELSE
            SET COLOR SET TO MONOCHROME
         ENDIF
      ENDIF
      EXIT
   ENDIF
NEXT
RETURN .T.
