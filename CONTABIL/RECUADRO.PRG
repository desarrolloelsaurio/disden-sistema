FUNCTION RECUADRO
PARAMETER RR1,RC1,RR2,RC2
RR1=IIF(EMPTY(RR1),0,RR1)
RC1=IIF(EMPTY(RC1),0,RC1)
RR2=IIF(EMPTY(RR2),24,RR2)
RC2=IIF(EMPTY(RC2),79,RC2)
DEFINE WIND WIN FROM RR1,RC1 TO RR2,RC2 SHAD DOUB ;
  TITL " "+ALLTRIM(EMPRESA)+" " ;
  FOOT " "+ALLTRIM(TITULO)+" "
ACTI WIND WIN
=MEN_LIN(SYSNOMBRE)
return

