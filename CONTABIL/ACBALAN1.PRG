*
*                       ACUMULA PARA BALANCE 1 Y 2
*
* ACBALAN1.PRG
* 10-02-93 07:33PM - GOYO
SCAT TO NADA
IF LEFT(AP,1)="P"
   POSIC=(PERINI+2)*2
   STORE NADA[POSIC] TO DPAR
   STORE NADA[POSIC+1] TO HPAR
ELSE
   IF ARRASANIO
      STORE DEBE0 TO DPAR
      STORE HABER0 TO HPAR
    ELSE
      STORE 0 TO DPAR,HPAR
   ENDIF
   PFIN=IIF(PERFIN<PERINI,PERFIN+12,PERFIN)
   FOR M=PERINI TO PFIN
      M2=IIF(M>12,M-12,M)
      POSIC=(M2+2)*2         
      STORE DPAR+NADA[POSIC] TO DPAR
      STORE HPAR+NADA[POSIC+1] TO HPAR
   NEXT
ENDIF
RETURN
