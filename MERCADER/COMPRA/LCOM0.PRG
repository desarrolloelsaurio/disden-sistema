FUNCTION LCOM0
	#DEFINE PAIP   "|"                            && PAIP
	?paip
	=IIF(VARIABLE[1],QOUT(left(COMS.COMCODPRO,texto[1,2])+PAIP),'')
	=IIF(VARIABLE[2],QOUT(left(COMS.COMPRA,texto[2,2])+PAIP),'')
	=IIF(VARIABLE[3],QOUT(SAYPER(COMS.PROCOD,"PROCOD",texto[3,2])+PAIP),'')
	=IIF(VARIABLE[4],QOUT(STR(COMS.MONTO,texto[4,2],2)+PAIP),'')
	=IIF(VARIABLE[5],QOUT(SAYMIX(COMS.UNIDAD,"MDDCOD",texto[5,2])+PAIP),'')
	=IIF(VARIABLE[6],QOUT(SAYMIX(COMS.COLOR,"SUECOD",texto[6,2])+PAIP),'')
	=IIF(VARIABLE[7],QOUT(SAYMIX(COMS.APLICACION,"APLCOD",texto[7,2])+PAIP),'')
	=IIF(VARIABLE[8],QOUT(SAYMIX(COMS.marca,"MARCOD",texto[8,2])+PAIP),'')
	IF DESTOCK
		=IIF(VARIABLE[9],QOUT(STR(COMS.STOCK,texto[9,2],2)+PAIP),'')
		=IIF(VARIABLE[10],QOUT(STR(COMS.STOCKMAX,texto[10,2],2)+PAIP),'')
		=IIF(VARIABLE[11],QOUT(STR(COMS.STOCKMIN,texto[11,2],2)+PAIP),'')
		=IIF(VARIABLE[12],QOUT(STR(COMS.STOCKUSO,texto[12,2],2)+PAIP),'')
		=IIF(VARIABLE[13],QOUT(STR(COMS.STOCKRES,texto[13,2],2)+PAIP),'')
		IF !EMPTY(DIFERENCIA)
			DO CASE
			CASE DIFERENCIA=1                       && STOCK MENOR QUE EL MINIMO
				=IIF(VARIABLE[14],QOUT(STR(COMS.STOCKMIN-COMS.STOCK,texto[14,2],2)+PAIP),'')
			CASE DIFERENCIA=2                       && STOCK MAYOR QUE EL MAXIMO
				=IIF(VARIABLE[14],QOUT(STR(COMS.STOCK-COMS.STOCKMAX,texto[14,2],2)+PAIP),'')
			CASE DIFERENCIA=3
				=IIF(VARIABLE[14],QOUT(STR(COMS.STOCK*COMS.MONTO,texto[14,2],2)+PAIP),'')
			ENDCASE
		ENDIF
	ENDIF
	casos=casos+1
RETURN .T.
