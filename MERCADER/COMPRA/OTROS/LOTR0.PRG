FUNCTION LOTR0
	#DEFINE PAIP   "|"                            && PAIP
	?paip
	=IIF(VARIABLE[1],QOUT(left(OTRS.OTRCODPRO,texto[1,2])+PAIP),'')
	=IIF(VARIABLE[2],QOUT(left(OTRS.OTRO,texto[2,2])+PAIP),'')
	=IIF(VARIABLE[3],QOUT(SAYPER(OTRS.PROCOD,"PROCOD",texto[3,2])+PAIP),'')
	=IIF(VARIABLE[4],QOUT(STR(OTRS.MONTO,texto[4,2],2)+PAIP),'')
	=IIF(VARIABLE[5],QOUT(SAYMIX(OTRS.UNIDAD,"MDDCOD",texto[5,2])+PAIP),'')
	=IIF(VARIABLE[6],QOUT(SAYMIX(OTRS.COLOR,"SUECOD",texto[6,2])+PAIP),'')
	=IIF(VARIABLE[7],QOUT(SAYMIX(OTRS.APLICACION,"APLCOD",texto[7,2])+PAIP),'')
	=IIF(VARIABLE[8],QOUT(SAYMIX(OTRS.MARCA,"MARCOD",texto[8,2])+PAIP),'')
	IF DESTOCK
		=IIF(VARIABLE[9],QOUT(STR(OTRS.STOCK,texto[9,2],2)+PAIP),'')
		=IIF(VARIABLE[10],QOUT(STR(OTRS.STOCKMAX,texto[10,2],2)+PAIP),'')
		=IIF(VARIABLE[11],QOUT(STR(OTRS.STOCKMIN,texto[11,2],2)+PAIP),'')
		=IIF(VARIABLE[12],QOUT(STR(OTRS.STOCKUSO,texto[12,2],2)+PAIP),'')
		=IIF(VARIABLE[13],QOUT(STR(OTRS.STOCKRES,texto[13,2],2)+PAIP),'')
		IF !EMPTY(DIFERENCIA)
			DO CASE
			CASE DIFERENCIA=1                       && STOCK MENOR QUE EL MINIMO
				=IIF(VARIABLE[14],QOUT(STR(OTRS.STOCKMIN-OTRS.STOCK,texto[14,2],2)+PAIP),'')
			CASE DIFERENCIA=2                       && STOCK MAYOR QUE EL MAXIMO
				=IIF(VARIABLE[14],QOUT(STR(OTRS.STOCK-OTRS.STOCKMAX,texto[14,2],2)+PAIP),'')
			CASE DIFERENCIA=3
				=IIF(VARIABLE[14],QOUT(STR(OTRS.STOCK*OTRS.MONTO,texto[14,2],2)+PAIP),'')
			ENDCASE
		ENDIF
	ENDIF
	casos=casos+1
RETURN .T.
