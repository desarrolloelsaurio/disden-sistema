FUNCTION LMERO
	PARAMETER ARCHIVO
	IF TYPE("ORDRUB")#'L' .OR. ORDRUB
		IF TYPE("ORDSRU")#'L' .OR. ORDSRU
			IF TYPE("ORDMER")#'L' .OR. ORDMER
				INDE ON RUBRO+SUBRUBRO+STR(ARTICULO) TO (ARCHIVO) FOR eval(fisc) comp
			ELSE
				INDE ON RUBRO+SUBRUBRO+MERCA TO (ARCHIVO) FOR eval(fisc) comp
			ENDIF
		ELSE
			IF TYPE("ORDMER")#'L' .OR. ORDMER
				INDE ON RUBRO+RIGHT(RUB.PALISTAR,20)+STR(ARTICULO) TO (ARCHIVO) FOR eval(fisc) comp
			ELSE
				INDE ON RUBRO+RIGHT(RUB.PALISTAR,20)+MERCA TO (ARCHIVO) FOR eval(fisc) comp
			ENDIF
		ENDIF
	ELSE
		IF TYPE("ORDSRU")#'L' .OR. ORDSRU
			IF TYPE("ORDMER")#'L' .OR. ORDMER
				INDE ON RUB.RUBRO+SUBRUBRO+STR(ARTICULO) TO (ARCHIVO) FOR eval(fisc) comp
			ELSE
				INDE ON RUB.RUBRO+SUBRUBRO+MERCA TO (ARCHIVO) FOR eval(fisc) comp
			ENDIF
		ELSE
			IF TYPE("ORDMER")#'L' .OR. ORDMER
				INDE ON RUB.PALISTAR+STR(ARTICULO) TO (ARCHIVO) FOR eval(fisc) comp
			ELSE
				INDE ON RUB.PALISTAR+MERCA TO (ARCHIVO) FOR eval(fisc) comp
			ENDIF
		ENDIF
	ENDIF
RETURN .T.
