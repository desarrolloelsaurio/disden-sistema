FUNCTION SAVVAR
PARAMETER GV_VAR,GV_TIPO,GV_VAL,GV_PERSON
GV=ALIAS()
GVO=ORDER()
SELE MIX
SET ORDER TO TAG IIF(GV_PERSON,"FOXPER","FOXGRL")
IF !SEEK(GV_VAR)
   SCAT MEMV BLAN
   M.FILTRO=IIF(GV_PERSON,"?","ð")
   M.TEXTO1=GV_VAR
   =AGRABAR("MIX")
ENDIF      
IF GV_TIPO="N"
   REPL MIX.NU1 WITH GV_VAL
ELSE
   IF GV_TIPO="C"
      REPL MIX.TEXTO2 WITH GV_VAL
   ENDIF
ENDIF
IF !EMPTY(GV)
   SELE(GV)
   IF !EMPTY(GVO)
      SET ORDER TO TAG (GVO)
   ENDIF
ENDIF   
RETURN .T.