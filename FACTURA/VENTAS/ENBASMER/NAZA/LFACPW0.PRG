FUNCTION LFACPW0
	PARAMETER PORPAN
	DIME ELIVA[15]
	=LFACW()
	=DOTALK()
	TMP=GENTMP()
	SELE FAX
	SET ORDER TO TAG FACTURA INTO FAC
	SET RELA TO FAX.FACTURA INTO FAC
	SELE FAC
	SET ORDER TO TAG CODCLI IN PER
	SET RELATION TO FAC.CODCLI INTO PER ADDI
	IF FILVIA=2
		SET ORDER TO TAG CODVIA IN VIA
		SET RELATION TO FAC.CODVIA INTO VIA ADDI
	ENDIF
	IF FILPAG=2
		SET ORDER TO TAG PAGCOD IN MIX
		SET RELATION TO FAC.CONDPAGO INTO MIX ADDI
	ENDIF
	SET ORDER TO TAG ARTICULO IN MER
	SET RELA TO LEFT(FAX.ARTICULO,13) INTO MER ADDI
	SET ORDER TO TAG RUBCOD IN MIX
	SET RELA TO MER.RUBRO INTO MIX ADDI
	SELE FAC
	IF ".T."=FISC
		INDE ON STR(MONTH(FAC.FECHAEM))+STR(YEAR(FAC.FECHAEM)) TO (TMP) UNIQ COMP
	ELSE
		INDE ON STR(MONTH(FAC.FECHAEM))+STR(YEAR(FAC.FECHAEM)) TO (TMP) UNIQ FOR EVAL(FISC) COMP
	ENDIF
	COUNT TO CANT_EL
	DIME LNEA[CANT_EL],SUMA[CANT_EL],TIT[CANT_EL]
	GO TOP
	IF PORPAN
		ACLA=REPL("-",80)
	ELSE
		ACLA=REPL("-",40+(CANT_EL+1)*(XACDIGI+1))
	ENDIF
	MES1=MONTH(FECHAEM)
	STORE YEAR(FECHAEM) TO ANO1,ANO2
	GO BOTT
	MES2=MONTH(FECHAEM)
	PUNTERO=MES1
	FOR A=1 TO CANT_EL
		TIT[A]=QMES[PUNTERO]+'/'+RIGHT(STR(ANO1),2)
		TIT[A]=PADC(TIT[A],XACDIGI)
		PUNTERO=PUNTERO+1
		IF PUNTERO>12
			PUNTERO=1
			ANO1=ANO1+1
		ENDIF
	NEXT
	SELE FAC
	SET RELA OFF INTO FAX
	SET INDEX TO
	SET ORDER TO TAG FACTURA
	SELE FAX
	SET RELA TO FAX.FACTURA INTO FAC
	GO TOP
	IF FILCLI=2 .AND. 'CLIENTE:' $ TT              && UN SOLO CLIENTE
		IF ' - POR RUBRO ' $ TT
			KTIPO='231'
			IF ".T."=FISC
				INDE ON LEFT(ARTICULO,13)+STR(MONTH(FAC.FECHAEM)) TO (TMP) COMP
			ELSE
				INDE ON LEFT(ARTICULO,13)+STR(MONTH(FAC.FECHAEM)) TO (TMP) FOR EVAL(FISC) COMP
			ENDIF
		ELSE
			KTIPO='221'
			IF ".T."=FISC
				INDE ON LEFT(ARTICULO,3)+STR(MONTH(FAC.FECHAEM)) TO (TMP) COMP
			ELSE
				INDE ON LEFT(ARTICULO,3)+STR(MONTH(FAC.FECHAEM)) TO (TMP) FOR EVAL(FISC) COMP
			ENDIF
		ENDIF
	ELSE
		IF ".T."=FISC
			INDE ON FAC.CODCLI+STR(MONTH(FAC.FECHAEM)) TO (TMP) COMP
		ELSE
			INDE ON FAC.CODCLI+STR(MONTH(FAC.FECHAEM)) TO (TMP) FOR EVAL(FISC) COMP
		ENDIF
		KTIPO='111'
	ENDIF
	GO TOP
	STORE '' TO ELCORTE,ELTEXTO,ELTEXTO1
RETURN .T.
