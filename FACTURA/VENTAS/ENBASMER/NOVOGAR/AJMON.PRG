FUNCTION AJMON
SELE CUOTAS
STORE RECNO() TO ELREC
IF MONTO>0
   STORE .T. TO M.AJMON
   STORE NUL TO MONPREV,MONPOST
   SCAN
      IF RECNO()<=ELREC
         M.MONPREV=M.MONPREV+MONTO
      ELSE
         EXIT
      ENDIF
   ENDSCAN
   RESTA=M.MONTONET-M.MONPREV
   CUOTARES=MIX.NU1-ELREC
   RESTO=MOD(RESTA,CUOTARES)
   RESTA=(RESTA-RESTO)/CUOTARES
   IF RESTA>0
      SCAN
         IF RECNO()>ELREC
            REPL MONTO WITH RESTA
         ENDIF
      ENDSCAN
   ENDIF
   GO (ELREC)
   IF !EOF()
      SKIP
      REPL MONTO WITH MONTO+RESTO
   ENDIF
   RETURN .T.
ELSE
   GO (ELREC)
   RETURN .F.
ENDIF
