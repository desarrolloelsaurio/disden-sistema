FUNCTION CLI_TXT
PARAMETER FILA
PRIVATE FILA,LATAR
SALIDA=.F.
cli_tarj=(upper(RIGHT(PER.CLIENTE,7))='TARJETA')
=MOVEWIN(7,9,IIF(cli_tarj,15,13),70,'CLITXT'," DATOS DEL CLIENTE ")
STORE SPACE(40) TO M.CLITXTNA,M.CLITXTAD
IF (GETENV("EQUIPO")='ARROYO')
   STORE PADR("ARROYO SECO",40) TO M.CLITXTLO
ELSE
   STORE PADR("ROSARIO",40) TO M.CLITXTLO
ENDIF
m.totalfac=fac.montonet
@ 1,1 SAY 'APELLIDO Y NOMBRE' GET M.CLITXTNA PICT '@!'
@ 2,1 SAY 'DOMICILIO        ' GET M.CLITXTAD PICT '@!'
@ 3,1 SAY 'LOCALIDAD        ' GET M.CLITXTLO PICT '@!'
IF cli_tarj
STORE SPACE(20) TO M.CLITXTNT
LATAR=PER.CLIENTE
@ 4,1 SAY LATAR
@ 5,1 SAY 'N§ TARJETA       ' GET M.CLITXTNT PICT '@!'
ENDIF
READ
IF LAST()#27 .AND. ;
!EMPTY(M.CLITXTNA) .AND. ;
!EMPTY(M.CLITXTAD)
   =AGRABAR("CLITXT")
   RETURN .T.
ENDIF
RETURN .F.
