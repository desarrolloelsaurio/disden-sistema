STORE NUL TO ACLA,LINEA,TT,CASOS
=LFACPZ0()
=WIN0()
PAG=1
=CABPAN()
=TIT_LIN(1)
SCAN
	IF ROW()>21
		IF HAY
			IF !FIN_LIN(1,NUL,FIN_SUM('SUBTOTAL',@TTL))
				EXIT
			ENDIF
		ELSE
			IF !FIN_LIN(1,NUL)
				EXIT
			ENDIF
		ENDIF
		CLEA
		STOR PAG+1 TO PAG
		=CABPAN()
		=TIT_LIN(2)
	ENDIF
	=LFACPZ2()
ENDSCAN
