FUNCTION YAMIX
PARAMETER Y_TIT,BLANCO,YA_VENT
IF !EMPTY(Y_TIT)
WAIT Y_TIT+"EXISTE" WIND NOWA
ENDIF
SELE MIX
IF BLANCO
   SCAT MEMO MEMV BLAN
   SCAT TO RESPALDO BLAN
   STORE .T. TO INGRESO
ELSE
   IF EMPTY(YA_VENT) .OR. YA_VENT="MIX"
      FF=RECNO("MIX")
      REGISTRO=STR(FF)
      UNLO IN MIX
      =LOCK("MIX") .OR. LOK("MIX")
      STORE .F. TO INGRESO      
   ENDIF
   SCAT TO RESPALDO   
   SCAT MEMV   
ENDIF
RETU SGET(IIF(EMPTY(YA_VENT),"MIX",YA_VENT)) .AND. ;
      IIF(EMPTY(Y_TIT),.T.,WCL())