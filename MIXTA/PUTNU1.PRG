#DEFINE NUL    0                                 && NUL
FUNCTION PUTNU1
	PARAMETER P_TEXTO,P_CONT,P_ORD1,P_SEEK,P_NUM
	* P_TEXTO : EL CONTENIDO DEL CAMPO TEXTO1
	* P_CONT  : EL VALOR DEL NUMERO
	* P_ORD1  : EL ORDER TAG EN CASO DE NO SER FORXGRL
	* P_SEEK  : EL TEXTO EXACTO A BUSCAR
	* P_NUM   : EL TIPO DE CAMPO "NU" QUE SE USA
	P_BASANT=ALIAS()
	P_ORDER=IIF(P_BASANT="MIX",ORDER(),"")
	P_ORD1=IIF(EMPTY(P_ORD1),"FOXGRL",P_ORD1)
	P_SEEK=IIF(EMPTY(P_SEEK),P_TEXTO,P_SEEK)
	STORE NUL TO M.REGISTRO
	SELE MIX
	IF XSEEK(P_SEEK,"MIX",P_ORD1)
		SCAT MEMV
		DO CASE
		CASE EMPTY(P_NUM) .OR. P_NUM=1
			M.NU1=P_CONT
		CASE P_NUM=3
			M.NU3=P_CONT
		CASE P_NUM=4
			M.NU4=P_CONT
		CASE P_NUM=5
			M.NU5=P_CONT
		ENDCASE
		=AGRABAR1("MIX")
	ELSE
		SCAT MEMV BLAN
		M.TEXTO1=P_TEXTO
		DO CASE 
		CASE EMPTY(P_NUM) .OR. P_NUM=1		
			M.NU1=P_CONT
		CASE P_NUM=4
			M.NU4=P_CONT
		CASE P_NUM=5
			M.NU5=P_CONT
		ENDCASE
		M.FILTRO=IIF(P_ORD1="FOXGRL","ð",IIF(P_ORD1="FOXPER","?",""))
		=AGRABAR("MIX")
	ENDIF
	IF !EMPTY(P_BASANT)
		SELE (P_BASANT)
		IF !EMPTY(P_ORDER)
			SET ORDER TO TAG (P_ORDER)
		ENDIF
	ENDIF
RETURN .T.
