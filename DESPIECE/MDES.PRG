	=XSEEK(DES.AVI,'AVI','AVICOD')
	NADA2=AVI.AVIOS
	NAD5=AVI.UNIDAD
	NADA10=UNID[NAD5]
	NADA21=ALLTRIM(UNID[AVI.UNIDAD])
