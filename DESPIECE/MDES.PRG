@ 4,1 SAY 'CANTIDAD A USAR' COLO SCHE 3
@ 4,col1 GET m.cantidad pict '99999999.99'

nada=unid[m.unidad]
@ 5,1 SAY 'UNIDAD' COLO SCHE 3
