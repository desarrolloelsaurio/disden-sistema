CLOSE DATA
USE \SISTEMAS\PRODUC\PRODUCA\MIXTA ALIAS MIX
CREATE CURSOR TEMPORAL ;
(NUMERO N(10),;
ARTICULO C(20),;
COLOR C(2),;
TALLE N(2),;
CANTIDAD N(4))
SELE TEMPORAL
STORE "  " TO M.COLOR
@ 1,1 GET M.COLOR
READ
ELC=SAYMIX(M.COLOR,"SUECOD")
@ 2,1 SAY ELC
FOR A=1 TO 40
APPE BLAN
REPL TALLE WITH A
REPL COLOR WITH M.COLOR
ENDFOR
GO TOP
BROW FIELD ;
TALLE:R,;
CANTIDAD:V=CANTIDAD>0 .AND. DITOTAL() ;
TITL " COLOR "+ELC+" " ;
FREE CANTIDAD


FUNCTION DITOTAL
WAIT ALLTRIM(STR(SUM(CANTIDAD))) WIND NOWA
RETURN .T.