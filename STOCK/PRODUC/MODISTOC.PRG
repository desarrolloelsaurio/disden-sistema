#DEFINE ENTERCON "PULSE [ENTER] PARA CONTINUAR"  && ENTERCON
FUNCTION MODISTOC
PARAMETER ELCOD,ELALI,ELTAG,LACAN
IF XSEEK(ELCOD,ELALI,ELTAG)
   ALIASANT=ALIAS()   
   SELE (ELALI)
   =LOCK() .OR. LOK()
   REPL STOCK WITH STOCK+LACAN
   UNLO IN (ELALI)
   IF !EMPTY(ALIASANT)
      SELE (ALIASANT)
   ENDIF
ELSE
=CARTEL("NO SE HA PODIDO REALIZAR EL AJUSTE DE STOCK",;
"DEL PRODUCTO "+ELCOD,;
"POR FAVOR, TOME NOTA DEL ERROR Y CORRIJALO A MANO",;
ENTERCON)
ENDIF
RETURN .T.